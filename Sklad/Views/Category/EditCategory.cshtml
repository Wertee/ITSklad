@model Category

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" value="@Model.Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Наименование</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Обновить" class="btn btn-primary" />
                <a class="btn btn-primary" asp-action="Index">Назад к списку</a>
                <a class="btn btn-danger" asp-action="DeleteCategory" asp-route-id="@Model.Id">Удалить</a>
            </div>
        </form>
    </div>
</div>

